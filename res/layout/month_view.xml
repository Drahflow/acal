<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:orientation="vertical" 
	android:background="@drawable/morphossbg">
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" 
		android:layout_height="500sp" android:layout_weight="1">
		
		<com.morphoss.acal.widget.AcalViewFlipper
			android:id="@+id/month_grid_flipper" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"/>
	
	</LinearLayout>
	
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" android:layout_weight="1">
		<com.morphoss.acal.widget.AcalViewFlipper
			android:id="@+id/month_list_flipper" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"/>
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/button_layout" 
		android:layout_width="fill_parent" 
		android:gravity="bottom"
		android:layout_height="50sp"
		android:background="#50500000"
		android:layout_gravity="bottom">
	
		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center" android:padding="0sp">
			<Button android:id="@+id/month_today_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/bottom_button"
				android:text="Today"
				android:width="70sp"
				android:layout_gravity="center" android:includeFontPadding="true" android:padding="0sp"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center" android:padding="0sp">
			<Button android:id="@+id/month_year_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				style="@style/bottom_button"
				android:text="Year"
				android:width="70sp" android:includeFontPadding="true" android:padding="0sp"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center" android:padding="0sp">
			<Button android:id="@+id/month_add_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="+"
				android:width="70sp"
				style="@style/bottom_add_button" android:includeFontPadding="true" android:padding="0sp" android:gravity="center_horizontal|center_vertical"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>