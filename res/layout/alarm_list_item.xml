<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:id="@+id/AlarmListItem"
	android:background="#0abe">

	<LinearLayout 
		android:id="@+id/alarms_list_item_container"
		android:layout_width="wrap_content" 
		android:layout_height="36sp"
		android:gravity="left"
		android:layout_gravity="left|center_vertical"
		android:orientation="horizontal"
		android:layout_weight="1">

		<TextView android:id="@+id/AlarmListItemTitle"
				android:layout_height="fill_parent" 
				android:layout_width="fill_parent"
				android:text="@string/alarm15MinutesPrior" 
				android:gravity="left|center_vertical"
				android:textColor="#000"
				android:textSize="20sp" 
				android:paddingLeft="14sp"/>

	</LinearLayout>
	<LinearLayout 
		android:id="@+id/alarms_list_item_container"
		android:layout_width="wrap_content" 
		android:layout_height="36sp"
		android:gravity="right|center_vertical"
		android:paddingLeft="5sp"
		android:paddingRight="14sp"
		android:layout_gravity="right|center_vertical">
		<ImageView
			android:id="@+id/delete_button"
			android:padding="1sp"
			android:paddingRight="0sp"
			android:layout_width="36sp"
			android:layout_height="36sp"
			android:layout_gravity="right|center_vertical"
			android:src="@drawable/red_x"
			android:scaleType="fitXY"/>
	</LinearLayout>
</TableRow>
