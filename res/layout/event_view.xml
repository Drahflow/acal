<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/EventViewLayout"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical">
	
	<!-- Title bar -->
	<TextView 
		android:id="@+id/EventViewTitle" 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:gravity="center"
		android:textColor="#F0F0F0" 
		android:background="@drawable/titlebg"
		android:tileMode="repeat">
	</TextView>
		
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/EventViewBelowTitleLayout"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:orientation="horizontal" 
		android:layout_weight="1">
		
		<!-- Color bar -->
		<LinearLayout
			android:id="@+id/EventViewColourBar"
			android:layout_height="fill_parent"
			android:layout_width="12dp"
			android:layout_gravity="left">
		</LinearLayout>
	
		<RelativeLayout
			android:id="@+id/EventViewContentArea"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:layout_weight="1"
			android:layout_gravity="right"
			android:isScrollContainer="true">
			<ScrollView
				android:layout_alignParentTop="true"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:background="@drawable/morphossbg" 
				android:layout_alignParentRight="true">
				<RelativeLayout 
		 			android:id="@+id/EventViewDataLayout"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:orientation="vertical">
				
					<!-- Event Name -->
					<TextView 
						android:id="@+id/EventName" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:layout_below="@+id/EventViewTitle" 
						android:text="Event Name" 
						android:textSize="30sp"
						android:paddingLeft="10sp"
						android:paddingBottom="10sp"/>
			
					<!-- Time content --> 
					<TextView 
						android:id="@+id/EventTimeContent"
						android:layout_below="@+id/EventName"
						android:text="12:00 - 13:00" 
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:textSize="24sp"
						android:paddingLeft="10sp"
						android:paddingBottom="10sp"/>
				
					<!-- Location Label and Button --> 
					<RelativeLayout 
						android:id="@+id/EventLocationLayout" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:layout_below="@+id/EventTimeContent"
						android:paddingBottom="15sp">
			
						<!-- Location Label -->
						<TextView 
							android:text="Location:" 
							android:id="@+id/EventLocationLabel" 
							android:layout_height="wrap_content"
							android:layout_width="fill_parent"
							android:paddingBottom="2sp"
							style="@style/event_view_label"/>
							
						<!-- Find on map button -->
						<Button 
							android:text="" 
							android:id="@+id/EventFindOnMapButton" 
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:includeFontPadding="true"
							android:background="@drawable/map_icon"
							android:layout_gravity="center" 
							android:padding="0sp"
							android:layout_alignParentRight="true"/>
						
						<TextView 
							android:text="" 
							android:id="@+id/EventLocationContent" 
							android:layout_below="@+id/EventLocationLabel" 
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							style="@style/event_view_content"/>
							
					</RelativeLayout>	
					<!-- End location label and button -->
			
					<RelativeLayout
						android:id="@+id/EventNotesLayout" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:layout_below="@+id/EventLocationLayout"
						android:paddingBottom="15sp">
					
						<!-- Notes label and content --> 
						<TextView 
							android:text="Notes:" 
							android:id="@+id/EventNotesLabel" 
							android:layout_below="@+id/EventLocationLayout"
							android:layout_height="wrap_content"
							android:layout_width="fill_parent"
							style="@style/event_view_label"/>
						<TextView 
							android:id="@+id/EventNotesContent" 
							android:layout_below="@+id/EventNotesLabel"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							style="@style/event_view_content"/>
							
					</RelativeLayout>
					
					<RelativeLayout
						android:id="@+id/EventAlarmsLayout" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:layout_below="@+id/EventNotesLayout"
						android:paddingBottom="15sp">
					
						<!-- Notes label and content --> 
						<TextView 
							android:text="Alarms:" 
							android:id="@+id/EventAlarmsLabel" 
							android:layout_below="@+id/EventNotesLayout"
							android:layout_height="wrap_content"
							android:layout_width="fill_parent"
							style="@style/event_view_label"/>
						<TextView 
							android:id="@+id/EventAlarmsContent" 
							android:layout_below="@+id/EventAlarmsLabel"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							style="@style/event_view_content"/>
							
					</RelativeLayout>
					
					<RelativeLayout
						android:id="@+id/EventRepeatsLayout" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:layout_below="@+id/EventAlarmsLayout">
					
						<!-- Notes label and content --> 
						<TextView 
							android:text="Event Repeats:" 
							android:id="@+id/EventRepeatsLabel" 
							android:layout_below="@+id/EventAlarmsLayout"
							android:layout_height="wrap_content"
							android:layout_width="fill_parent"
							style="@style/event_view_label"/>
						<TextView 
							android:id="@+id/EventRepeatsContent" 
							android:layout_below="@+id/EventRepeatsLabel"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							style="@style/event_view_content"/>
					</RelativeLayout>
				</RelativeLayout>
			</ScrollView>
		</RelativeLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/button_layout" 
		android:layout_width="fill_parent" 
		android:gravity="bottom"
		android:background="#AAAACC"
		android:layout_gravity="bottom" 
		android:layout_height="36dp">
	
		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center" 
			android:padding="0sp">
			<Button android:id="@+id/event_today_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/bottom_button"
				android:text="Today"
				android:width="70sp"
				android:layout_gravity="center" 
				android:includeFontPadding="true" 
				android:padding="0sp"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center" 
			android:padding="0sp">
			<Button android:id="@+id/event_edit_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				style="@style/bottom_button"
				android:text="Edit"
				android:width="70sp" 
				android:includeFontPadding="true" 
				android:padding="0sp"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center" 
			android:padding="0sp">
			<Button android:id="@+id/event_add_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="+"
				android:width="70sp"
				style="@style/bottom_add_button" 
				android:includeFontPadding="true" 
				android:padding="0sp" 
				android:gravity="center_horizontal|center_vertical"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>