<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

  <TableLayout android:id="@+id/TableLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content">
	<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:paddingLeft="50px" android:paddingRight="50px" android:text="@string/Summary"/>
		<EditText android:id="@+id/EditText01" android:layout_height="wrap_content" android:layout_width="fill_parent"
		          android:inputType="text" android:lines="1" android:maxLines="1" android:hint="@string/Enter_a_brief_summary_of_the_event"
		          android:text="@string/Summary"/>
    </TableRow>
  </TableLayout>
  <Button android:id="@+id/Button01" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/Save"/>
</LinearLayout>
