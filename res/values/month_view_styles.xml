<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

<style name="MonthDayColumnHeader">
    <item name="android:textSize">13sp</item>
    <item name="android:height">15sp</item>
    <item name="android:textColor">#001060</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center_horizontal|top</item>
    <item name="android:background">@drawable/monthdayheadingsbg</item>
</style>

<style name="MonthDayInMonth">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">#001060</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">#A0DDDDDD</item>
    <item name="android:padding">0px</item> 
    <item name="android:height">30sp</item>
    <item name="android:gravity">center</item>
</style>
<style name="MonthDayHighlightDay">
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">#c00000</item>
    <item name="android:textStyle">bold</item>
    <item name="android:height">30sp</item>
    <item name="android:gravity">center_horizontal|bottom</item>
    <item name="android:background">#00FFFFFF</item>
</style>
<style name="MonthDayOutMonth">
    <item name="android:textSize">17sp</item>
    <item name="android:textColor">#606060</item>
    <item name="android:textStyle">normal</item>
    <item name="android:height">30sp</item>
    <item name="android:gravity">center</item>
    <item name="android:background">#80AAAAAA</item>
</style>
<style name="MonthDayOutMonthHighlighted">
    <item name="android:textSize">22sp</item>
    <item name="android:textColor">#c00000</item>
    <item name="android:textStyle">bold</item>
    <item name="android:height">30sp</item>
    <item name="android:gravity">center</item>
    <item name="android:background">#80AAAAAA</item>
</style>

</resources>
